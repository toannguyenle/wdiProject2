<div class="row">
  <div id="signin" class="col-sm-4 col-sm-offset-4">
    <%= bootstrap_form_for(@user, {url: sessions_path}) do |f| %>
      <%= f.email_field :email%>
      <%= f.password_field :password%>
      <%= f.check_box :remember_me, label: 'Remember me!', checked: true %>
      
      <%= f.submit 'Sign in', :class => 'btn btn-primary btn-lg btn-block'%>
    <% end %>
  </div>
</div>