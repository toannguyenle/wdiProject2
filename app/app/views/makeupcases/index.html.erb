<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <h1>Your make up case</h1>
  </div>
</div>
<div class="row">
  <div id="signin" class="col-sm-6 col-sm-offset-3">
    <% raise @current_user.product.inspect %>
    <% if @current_user.product %>
      <div class="table-responsive">
        <table class="table table-hover">
          <tr>
            <th>Brand</th>
            <th>Name</th>
            <th>Size</th>
            <th>Category</th>
            <th>Ave Price</th>
            <th>Manufacturer</th>
            <th>Ingredients</th>
            <th>Short Description</th>
            <th>Opened Date</th>
            <th>Expiration Date</th>
            <th>Like or Not</th>
            <th>Review</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
              <tr>
                <td><%= @current_user.product.brand %></td>
                <td><%= @current_user.product.name %></td>
                <td><%= @current_user.product.upc_e %></td>
                <td><%= @current_user.product.category %></td>
                <td><%= @current_user.product.avg_price %></td>
                <td><%= @current_user.product.manufacturer %></td>
                <td><%= @current_user.product.ingredients %></td>
                <td><%= @current_user.product.short_description %></td>
                <td><%= @current_user.product.date_first_use %></td>
                <td><%= @current_user.product.date_expired %></td>
                <td><%= @current_user.product.like_or_not %></td>
                <td><%= @current_user.product.review %></td>
                <td><%= link_to 'Edit', edit_product_path(@current_user.product) %></td>
                <td><%= link_to 'X', @current_user.product, method: :delete, data: {confirm: 'Are you sure?'} %></td>
              </tr>
        </table>
      </div>
    <% else %>
      <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
          <h3>No product available. Add more here.</h3>
        </div>
      </div>
    <% end %>
  </div>
</div>