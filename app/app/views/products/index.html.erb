<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <h1>Products List</h1>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-hover">
    <tr>
      <th>#</th>
      <th>Brand</th>
      <th>Name</th>
      <th>Vol</th>
      <th>SKU</th>
      <th>Price</th>
      <th>Review</th>
      <th>Like or Not</th>
      <th>Opened Date</th>
      <th>Expiration Date</th>
      <th>Category</th>
      <th>User_ID</th>
    </tr>
      <% @products.each do |p| %>
        <tr>
          <td><%= p.product_id %></td>
          <td><%= p.brand %></td>
          <td><%= p.name %></td>
          <td><%= p.volume %></td>
          <td><%= p.sku %></td>
          <td><%= p.price %></td>
          <td><%= p.review %></td>
          <td><%= p.like_or_not %></td>
          <td><%= p.opened_date %></td>
          <td><%= p.expiration_date %></td>
          <td><%= p.category %></td>
          <td><%= p.user_id %></td>
        </tr>
      <% end %>
  </table>
</div>

